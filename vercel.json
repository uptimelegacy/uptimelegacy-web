{
  "cleanUrls": true,
  "trailingSlash": false,

  "rewrites": [
    { "source": "/brands/:slug", "destination": "/brand.html?slug=:slug" },
    { "source": "/brands",      "destination": "/brands/index.html" }
  ],

  "headers": [
    {
      "source": "/brands/:slug",
      "headers": [
        { "key": "Cache-Control", "value": "no-store" }
      ]
    }
  ]
}
