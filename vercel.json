{
  "cleanUrls": true,
  "rewrites": [
    { "source": "/brands",        "destination": "/brands/index.html" },
    { "source": "/brands/",       "destination": "/brands/index.html" },

    { "source": "/brands/:slug",  "destination": "/brand.html?slug=:slug" },
    { "source": "/brands/:slug/", "destination": "/brand.html?slug=:slug" }
  ],
  "redirects": [
    { "source": "/brand/:slug", "destination": "/brands/:slug", "permanent": false }
  ]
}
